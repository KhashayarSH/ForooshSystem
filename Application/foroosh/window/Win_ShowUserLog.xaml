        <Rectangle HorizontalAlignment="Left" Height="154" Margin="22,411,0,0" RadiusY="10" RadiusX="10" Stroke="#FF4EA936" VerticalAlignment="Top" Width="650" Fill="#FFF4F4F4">
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="جستجو" HorizontalAlignment="Left" Margin="602,420,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="B Yekan" FontSize="18"/>
