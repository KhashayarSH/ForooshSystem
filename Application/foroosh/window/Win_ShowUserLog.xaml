            </Rectangle.Fill>
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" RadiusY="10" RadiusX="10" Stroke="#FF4EA936" VerticalAlignment="Top" Width="680">
